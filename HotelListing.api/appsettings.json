{
  //Logging configuration
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      //Seq - Machine data for humans
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341/" }
      }
    ]
  },
  "AllowedHosts": "*"
}
